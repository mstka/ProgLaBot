<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_PJ.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                x:Name="scoreLabel"
                Text="スコア: 0"
                FontSize="32"
                HorizontalOptions="Center" />

            <Image
                x:Name="botImage"
                Source="dotnet_bot.png"
                HeightRequest="200"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                WidthRequest="200" />

            <Button
                x:Name="CounterBtn"
                Text="クリックしてキャラクターを動かす"
                FontSize="18"
                HorizontalOptions="Center"
                Clicked="OnCounterClicked" />

            <Ellipse Fill="DarkBlue"
                 Stroke="Red"
                 StrokeThickness="4"
                 WidthRequest="150"
                 HeightRequest="50"
                 HorizontalOptions="Start" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
